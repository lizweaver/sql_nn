# Example profiles.yml - Copy to ~/.dbt/profiles.yml and configure

sql_neural_network:
  target: databricks  # Change this to your preferred target
  outputs:
    
    # Databricks configuration (recommended - has free Community Edition)
    databricks:
      type: databricks
      catalog: hive_metastore  # or your Unity Catalog name
      schema: neural_network
      host: "{{ env_var('DATABRICKS_HOST') }}"  # e.g., adb-1234567890.1.azuredatabricks.net
      http_path: "{{ env_var('DATABRICKS_HTTP_PATH') }}"  # e.g., /sql/1.0/warehouses/abc123
      token: "{{ env_var('DATABRICKS_TOKEN') }}"
      threads: 4

    # Databricks Community Edition (free tier)
    # Note: Community Edition uses clusters, not SQL warehouses
    databricks_community:
      type: databricks
      catalog: hive_metastore
      schema: neural_network
      host: community.cloud.databricks.com
      http_path: /sql/protocolv1/o/0/your-cluster-id
      token: "{{ env_var('DATABRICKS_TOKEN') }}"
      threads: 2

    # Snowflake configuration
    snowflake:
      type: snowflake
      account: your_account
      user: your_username
      password: "{{ env_var('SNOWFLAKE_PASSWORD') }}"
      role: your_role
      database: your_database
      warehouse: your_warehouse
      schema: neural_network
      threads: 4

    # DuckDB configuration (for local testing - no cloud needed)
    duckdb:
      type: duckdb
      path: 'neural_network.duckdb'
      threads: 4

    # PostgreSQL configuration
    postgres:
      type: postgres
      host: localhost
      user: your_username
      password: "{{ env_var('POSTGRES_PASSWORD') }}"
      port: 5432
      dbname: neural_network
      schema: public
      threads: 4
